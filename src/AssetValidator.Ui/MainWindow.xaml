<Window x:Class="AssetValidator.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asset Validator"
        Height="520"
        Width="900"
        Icon="Assets/Icon.ico"
        Background="#1E1E1E"
        Foreground="#E0E0E0"
        FontFamily="Segoe UI">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1"
                Background="#252526"
                Padding="8"
                CornerRadius="4"
                Margin="0,0,0,10">

            <StackPanel Orientation="Horizontal">
                <Button
                    Height="28"
                    Padding="12,0"
                    Content="Validate Assets from JSON"
                    Click="ValidateJsonAssets"
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>

                <TextBlock
                    Text="Results are color-coded by severity"
                    VerticalAlignment="Center"
                    Margin="12,0,0,0"
                    Foreground="#A0A0A0"
                    FontSize="12"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2"
                  x:Name="ResultsGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  Background="#1E1E1E"
                  BorderThickness="0"
                  RowBackground="#1E1E1E"
                  AlternatingRowBackground="#252526"
                  Foreground="#E0E0E0">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2D2D30"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="6,4"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- Row Styling -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="MinHeight" Value="26"/>
                    <Style.Triggers>

                        <DataTrigger Binding="{Binding Severity}" Value="Error">
                            <Setter Property="Background" Value="#4F1F1F"/>
                            <Setter Property="Foreground" Value="#FFD6D6"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Severity}" Value="Warning">
                            <Setter Property="Background" Value="#4F4A1F"/>
                            <Setter Property="Foreground" Value="#FFF4C2"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Severity}" Value="Log">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#E0E0E0"/>
                        </DataTrigger>

                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="90"/>
                <DataGridTextColumn Header="Rule" Binding="{Binding RuleId}" Width="120"/>
                <DataGridTextColumn Header="Asset" Binding="{Binding AssetPath}" Width="*"/>
                <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="2*"/>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Window>
